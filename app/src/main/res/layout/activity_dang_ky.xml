<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dang_ky"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.huynhvannhan.game2.DangKy">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:id="@+id/edittaikhoan"
        android:hint="User" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/edittaikhoan"
        android:layout_alignRight="@+id/edittaikhoan"
        android:layout_alignEnd="@+id/edittaikhoan"
        android:layout_marginTop="24dp"
        android:id="@+id/editmk"
        android:hint="Passwold" />

    <Button
        android:text="Đăng Ký"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtmk1"
        android:layout_alignLeft="@+id/edtmk1"
        android:layout_alignStart="@+id/edtmk1"
        android:layout_marginTop="18dp"
        android:id="@+id/btndangky"
        android:layout_alignRight="@+id/edtmk1"
        android:layout_alignEnd="@+id/edtmk1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="21dp"
        android:id="@+id/edtmk1"
        android:layout_below="@+id/editmk"
        android:layout_alignLeft="@+id/editmk"
        android:layout_alignStart="@+id/editmk"
        android:hint="Passwold" />
</RelativeLayout>
