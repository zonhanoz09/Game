<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dang_nhap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.huynhvannhan.game2.DangNhapActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:id="@+id/edittaikhoan"
        android:hint="user"
        android:text="Nhan" />

    <Button
        android:text="ĐăngKý"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btndangky"
        android:layout_alignBaseline="@+id/btndangnhap"
        android:layout_alignBottom="@+id/btndangnhap"
        android:layout_alignRight="@+id/editmk"
        android:layout_alignEnd="@+id/editmk" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btndangnhap"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/editmk"
        android:layout_alignLeft="@+id/editmk"
        android:layout_alignStart="@+id/editmk"
        android:layout_toLeftOf="@+id/btndangky"
        android:layout_toStartOf="@+id/btndangky"
        android:elevation="0dp"
        android:background="@android:color/holo_blue_bright"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/editmk"
        android:hint="passwold"
        android:layout_below="@+id/edittaikhoan"
        android:layout_alignLeft="@+id/edittaikhoan"
        android:layout_alignStart="@+id/edittaikhoan" />

</RelativeLayout>
